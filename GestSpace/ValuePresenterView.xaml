<UserControl x:Class="GestSpace.ValuePresenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:GestSpace.Controls;assembly=GestSpace.Controls"
             xmlns:local="clr-namespace:GestSpace"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <ProgressBar Style="{StaticResource GeometryBar}" 
                         local:ProgressBarExtensions.Geometry="{StaticResource VolumeGeometry}"
                         Background="{DynamicResource BackgroundBrush}"
                         Foreground="{DynamicResource NormalForegroundBrush}"
                         Minimum="{Binding MinValue}"
                         Maximum="{Binding MaxValue}"
                         Value="{Binding Value}"></ProgressBar>

</UserControl>
